<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl"
    android:layout_width="match_parent"
    android:layout_height="@dimen/baselib_dp60"
    android:descendantFocusability="blocksDescendants">
    
    <ImageView
        android:id="@+id/iv"
        android:layout_width="@dimen/baselib_dp30"
        android:layout_height="@dimen/baselib_dp30"
        android:layout_marginLeft="@dimen/baselib_dp16"
        app:layout_constraintBottom_toTopOf="@id/separate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/baselib_dp10"
        android:paddingRight="@dimen/baselib_dp16"
        android:textColor="@color/main_color_060606"
        android:textSize="@dimen/baselib_dp15"
        app:layout_constraintBottom_toTopOf="@id/separate"
        app:layout_constraintLeft_toRightOf="@id/iv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="@dimen/baselib_dp0.5"
        android:layout_marginTop="@dimen/baselib_dp10"
        android:background="@color/main_color_DDDDDD"
        app:layout_constraintBottom_toTopOf="@id/separate"
        app:layout_constraintLeft_toLeftOf="@id/tv_title"
        app:layout_constraintRight_toRightOf="parent"/>
    
    <View
        android:id="@+id/separate"
        android:layout_width="0dp"
        android:layout_height="@dimen/baselib_dp10"
        android:background="@color/main_color_EFEFEF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>
