<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:biv="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:background="@color/main_color_EF5227"
    android:paddingLeft="@dimen/baselib_dp16"
    android:paddingRight="@dimen/baselib_dp16">
    
    <com.tb.baselib.widget.BaseImageView
        android:id="@+id/iv_header"
        android:layout_width="@dimen/baselib_dp64"
        android:layout_height="@dimen/baselib_dp64"
        android:src="@color/main_color_95D1FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        biv:baselib_border_color="@color/main_color_95D1FF"
        biv:baselib_border_width="@dimen/baselib_dp2"
        biv:baselib_has_border="true"
        biv:baselib_is_circle="true"/>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/baselib_dp10"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_header"
        app:layout_constraintTop_toTopOf="parent">
        
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tb"
            android:textColor="@color/main_color_FFFFFF"
            android:textSize="@dimen/baselib_dp16"/>
        
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18600000000"
            android:textColor="@color/main_color_FFFFFF"
            android:textSize="@dimen/baselib_dp14"/>
        
        <TextView
            android:id="@+id/tv_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hello world"
            android:textColor="@color/main_color_FFFFFF"
            android:textSize="@dimen/baselib_dp14"/>
    </LinearLayout>
    
    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/main_ic_arrow_right_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <ImageView
        android:id="@+id/iv_qr"
        android:layout_width="@dimen/baselib_dp30"
        android:layout_height="@dimen/baselib_dp30"
        android:layout_marginRight="@dimen/baselib_dp10"
        android:src="@color/main_color_FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_arrow"
        app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>
